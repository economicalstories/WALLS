{
  "version": 2,
  "builds": [
    {
      "src": "api/dashboard.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "installCommand": "pip install --no-cache-dir -r api/requirements.txt",
        "debug": true
      }
    }
  ],
  "routes": [
    {"src": "/(.*)", "dest": "api/dashboard.py"}
  ],
  "env": {
    "PYTHONPATH": ".",
    "PYTHONUNBUFFERED": "1"
  }
} 